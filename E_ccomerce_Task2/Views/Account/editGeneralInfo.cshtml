@model E_ccomerce_Task2.Models.GeneralInfo

@{
    ViewData["Title"] = "Edit General Information";
    
     <!-- Site CSS -->
     <link rel="stylesheet" href="~/css/Home/style.css">
        <link rel="stylesheet" href="~/css/Home/owl.carousel.min.css">
       <link rel="stylesheet" href="~/css/Home/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/css/Account/editGeneralInfo.css">
    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/css/Home/responsive.css">
      <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]--> 
   
 }

<section class="form-v10" style="padding: 30px 0px;">
    
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="title-all text-center">
                    <h1>Profile Setting</h1>
                </div>
            </div>
        </div> 
         
        <div class="row">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="profile-form" class="form" action="" method="post">
                           	<div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
						        <div class="form-row form-row-1">
							        <div class="form-floating ">
								        <input asp-for="FirstName" type="text" class="form-control" id="firstName" placeholder="   " name="FirstName">
								        <label asp-for="FirstName">First Name</label>  
								        <span asp-validation-for="FirstName" class="text-danger"></span>  
						            </div>
						        </div>
						        <div class="form-row form-row-2">
						            <div class="form-floating ">
								            <input  asp-for="LastName" type="text" class="form-control" id="lastName" placeholder="   " name="LastName" >
								            <label asp-for="LastName">Last Name</label>  
								            <span asp-validation-for="LastName" class="text-danger"></span>  
						            </div>
						        </div>
					        </div>
	 
                            <div class="form-floating ">
								<input asp-for="Email" type="text" class="form-control" id="email" placeholder="   " name="Email" readonly>
								<label asp-for="Email" class="text-info" > Email </label>  
								<span asp-validation-for="Email" class="text-danger"></span>  
						    </div> 
                             
                            <div class="">   
                                
                                <input type="submit" class="btn hvr-hover" name="Save" value="Save">
                                <a asp-action="myAccount" asp-controller="Account" class="btn hvr-hover danger" >Cancel</a>
                            </div>
                          
                           
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>   
</section>
   <!-- ALL JS FILES -->
    <script src="~/js/Home/jquery-3.2.1.min.js"></script>
