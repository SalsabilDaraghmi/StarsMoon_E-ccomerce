 }
 <style>
    .text-info
    {
         color: #b0b435;
    }
    .hvr-hover{
        display:block;
        position: absolute;
        left: 50%;
        transform: translatex(-50%);
        width: 200px;
        margin-bottom:30px;
    }
    .form-control{
        margin-bottom:10px;
        border:2px solid #b0b435
    }
 </style>
<section class="form-v10" style="padding: 30px 0px;">
   
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="title-all text-center">
                    <h1>Forgot Password</h1>
                </div>
            </div>
        </div> 
         
        <div class="row">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="" method="post">
                           	<div asp-validation-summary="All" class="text-danger"></div>

                             <div class="form-floating ">
								<input asp-for="Email" type="Email" class="form-control"  placeholder="   " name="Email">
								<label asp-for="Email" class="text-info"> Email</label>  
								<span asp-validation-for="Email" class="text-danger"></span>  
						    </div>
                            <div class="form-group">
                                <input type="submit" class="btn hvr-hover" name="forgotPassword" value="Send Email">
                            </div>
                           
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>   
</section>
